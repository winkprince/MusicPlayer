<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PersonActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/person_bg"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            >

        <com.example.buttonnavigation.CircleImageView
            android:src="@drawable/photo1"
            android:layout_width="150dp"
            android:layout_height="190dp"
            android:id="@+id/circleImageView"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Prince"
                android:fontFamily="sans-serif-black"
                android:textColor="@color/taohuapink"
                android:textSize="30sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/taohuapink"
                android:text="粉丝：1000W   等级：v8"/>



        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="6dp"
        >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#33CCCCCC"
    android:layout_gravity="center_vertical"
    >
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="编辑信息"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:textSize="22sp"
        />

    <ImageView
        android:layout_width="45dp"
        android:layout_height="40dp"
        android:src="@drawable/right"
        android:layout_marginTop="18dp"
        />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33CCCCCC"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="消息通知"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33CCCCCC"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="主题换肤"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33CCCCCC"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="帮助与反馈"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#33CCCCCC"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_vertical"
        >
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="隐私设置"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:textSize="22sp"
            />

        <ImageView
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:src="@drawable/right"
            android:layout_marginTop="18dp"
            />
    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        android:gravity="center">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="切换账户"
            app:backgroundTint="@color/taohuapink" />

        <Button
            android:id="@+id/button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="退出登录"
            android:textColor="@color/white"
            app:backgroundTint="@color/taohuapink" />
    </LinearLayout>
</LinearLayout>
